[Unit]
Description=Install and start k0s
After=network-online.target
Wants=network-online.target
ConditionPathExists=!/var/lib/k0s

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/k0s install controller --single --config=/etc/k0s/k0s.yaml
ExecStartPost=/usr/local/bin/k0s start

[Install]
WantedBy=multi-user.target
